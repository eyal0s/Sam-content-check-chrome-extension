{
  "name": "Sam: Your Content Helper",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "Content check, spelling and proofreading by human experts",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/19.png",
    "default_title": "Sam",
    "default_popup": "src/browser_action/browser_action.html",
    "scripts": ["app.js"]
  },
  "permissions": [
    "clipboardWrite","tabs"
  ]
}